<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="KeralaTourismAutomation" parallel="tests" thread-count="3">

  <test name="E2E and FormValidation Tests Firefox Test">
     <parameter name="browser" value="firefox"/>
         <classes>
            <class name="kerala_Tourism_Automation_Selenide_Java.E2EUserJourney"/>
            <class name="kerala_Tourism_Automation_Selenide_Java.FormValidation"/>
            <class name="kerala_Tourism_Automation_Selenide_Java.PerformanceTestUsingPageLoadTime"/>
            <class name="kerala_Tourism_Automation_Selenide_Java.ResponsiveUITest"/>
        </classes>
    </test>
    
    <test name="E2E and FormValidation Tests Edge Test">
     <parameter name="browser" value="edge"/>
         <classes>
            <class name="kerala_Tourism_Automation_Selenide_Java.E2EUserJourney"/>
            <class name="kerala_Tourism_Automation_Selenide_Java.FormValidation"/>
            <class name="kerala_Tourism_Automation_Selenide_Java.PerformanceTestUsingPageLoadTime"/>
            <class name="kerala_Tourism_Automation_Selenide_Java.ResponsiveUITest"/>
        </classes>
    </test>
    
    
    <test name="E2E and FormValidation Tests Chrome Test">
     <parameter name="browser" value="chrome"/>
         <classes>
            <class name="kerala_Tourism_Automation_Selenide_Java.E2EUserJourney"/>
            <class name="kerala_Tourism_Automation_Selenide_Java.FormValidation"/>
            <class name="kerala_Tourism_Automation_Selenide_Java.PerformanceTestUsingPageLoadTime"/>
            <class name="kerala_Tourism_Automation_Selenide_Java.ResponsiveUITest"/>
        </classes>
    </test>
  
</suite>
